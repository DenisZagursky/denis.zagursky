<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="persistenceCatalog">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>com.netcracker.zagursky.service.EntityManagerService</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/catalogmodule"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="1111"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL81Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>


        </properties>
    </persistence-unit>
</persistence>